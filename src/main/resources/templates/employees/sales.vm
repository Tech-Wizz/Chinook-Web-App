#parse('templates/header.vm')

<h3>Employees</h3>
<a href="/employees/tree">[Employee Tree]</a>
<a href="/employees/sales">[Sales Report]</a>

<table>
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Sales Count</th>
        <th>Sales Totals</th>
    </tr>
    </thead>
    <tbody>
        #foreach( $info in $salesInfo )
        <tr>
            <td>$!info.FirstName</td>
            <td>$!info.LastName</td>
            <td>$!info.Email</td>
            <td>$!info.SalesCount</td>
            <td>$!info.SalesTotals</td>
        </tr>
        #end
    </tbody>
</table>

