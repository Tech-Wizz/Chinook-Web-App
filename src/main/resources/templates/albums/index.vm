#parse('templates/header.vm')

<h3>Albums</h3>

<table>
    <thead>
    <tr>
        <th>Album ID</th>
        <th>Title</th>
    </tr>
    </thead>
    <tbody>
        #foreach( $album in $albums )
        <tr>
            <td><a href="/albums/$album.AlbumId">$album.AlbumId</a></td>
            <td>$!album.Title</td>
        </tr>
        #end
    </tbody>
</table>

$web.pagingWidget($albums)

<a href="/albums/new">[Create New Album]</a>

#parse('templates/footer.vm')
